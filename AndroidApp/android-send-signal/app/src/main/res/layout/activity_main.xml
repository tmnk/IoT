<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iothub.azure.microsoft.com.androidsample.MainActivity">

    <Switch
        android:id="@+id/simpleSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/simpleSwitch2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/simpleSwitch2"
        android:layout_gravity="center"
        android:layout_marginTop="43dp"
        android:switchTextAppearance="@style/TextAppearance.AppCompat"
        android:text="@string/first"
        android:textColor="@android:color/holo_red_light"
        android:textColorLink="@android:color/holo_red_light"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:textStyle="bold"
        android:theme="@style/Switch1Theme"/>

    <Switch
        android:id="@+id/simpleSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/submitButton"
        android:layout_below="@+id/simpleSwitch1"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:checked="false"
        android:text="@string/second"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:textStyle="bold"
        android:theme="@style/Switch2Theme"/>

    <Switch
        android:id="@+id/simpleSwitch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton"
        android:layout_below="@+id/simpleSwitch2"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:checked="false"
        android:text="@string/third"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimaryDark"
        android:textOff="@string/off"
        android:textOn="@string/on"
        android:textStyle="bold"
        android:theme="@style/Switch3Theme"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="#009284"
        android:padding="10dp"
        android:text="@string/submit"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginStart="121dp"
        android:layout_below="@+id/simpleSwitch3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
